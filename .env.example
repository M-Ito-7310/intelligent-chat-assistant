# Environment Configuration Example
# Copy this file to .env and fill in your actual values

# ================================
# Backend Configuration
# ================================

# Server Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# Database Configuration
DATABASE_URL=postgresql://ai_chatbot_user:ai_chatbot_password@localhost:5433/ai_chatbot

# Redis Configuration
REDIS_URL=redis://localhost:6380

# Authentication
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# AI Services
OPENAI_API_KEY=sk-your-openai-api-key-here
HUGGINGFACE_TOKEN=hf_your-huggingface-token-here

# Vector Database (Optional - if using Pinecone instead of pgvector)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=pdf,txt,docx,md

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Cache Configuration
CACHE_TTL=3600
ENABLE_CACHE=true

# ================================
# Frontend Configuration
# ================================

# API Configuration
VITE_API_BASE_URL=http://localhost:3000
VITE_APP_ENV=development

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true

# Demo Mode Configuration
VITE_GOOGLE_GEMINI_API_KEY=your-google-gemini-api-key-here

